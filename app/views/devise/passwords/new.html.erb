<div class='container-fluid d-flex align-items-center flex-column'>

    <h2 class='mb-5 mt-4'>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class:'col form-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'ml-2 w-100' %>
  </div>

  <div class="actions">
    <%= f.submit "Send reset password instructions", class: 'btn btn-primary ml-2 w-100 mt-4 mb-2' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
