<div class='container-fluid d-flex align-items-center flex-column pb-0'>
  <%- if controller_name != 'sessions' %>
    <p class='mt-2'>Existing User? <%= link_to "Log in", new_session_path(resource_name) %></p><br />
  <% end %>

<div class='container-fluid d-flex align-items-center flex-column pb-0'>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p class='mt-0'><%= link_to "Register New Account", new_registration_path(resource_name) %></p><br />
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <p class='mt-0'><%= link_to "Forgotten Password?", new_password_path(resource_name) %></p><br />
  <% end %>
</div> <!-- close container -->

<div class='container-fluid d-flex align-items-center flex-column pb-0'>
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <p class='mt-2'><%= link_to "Sign In With #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post %></p><br />
    <% end %>
  <% end %>
</div> <!-- close container -->
