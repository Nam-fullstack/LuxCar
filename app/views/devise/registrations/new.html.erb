<div class='container-fluid d-flex align-items-center flex-column'>
  <h2 class='mb-4 mt-4'>Register New Account</h2>

  <div class='container-fluid d-flex align-items-center flex-column'>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'devise/shared/error_messages', resource: resource %>

      <div class='form-group mb-3'>
        <%= f.label :first_name, class:'col form-label' %><br />
        <%= f.text_field :first_name, autofocus: true, class: 'ml-2 w-75' %>
      </div>

      <div class='form-group mb-3'>
        <%= f.label :last_name, class:'col form-label' %><br />
        <%= f.text_field :last_name, autofocus: true, class: 'ml-2 w-75' %>
      </div>

      <div class='form-group mb-3'>
        <%= f.label :username, class:'col form-label' %><br />
        <%= f.text_field :username, autofocus: true, class: 'ml-2 w-75' %>
      </div>

      <div class='form-group mb-3'>
        <%= f.label :email, class:'col form-label' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'ml-2 w-75' %>
      </div>

      <div class='form-group mb-3'>
        <%= f.label :password , class:'col form-label mb-0' %>
        <% if @minimum_password_length %>
          <em class='ml-2 mb-0 mt-0'>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: 'new-password', class: 'ml-2 w-75' %>
      </div>

      <div class='form-group mb-3'>
        <%= f.label :password_confirmation, class:'col form-label' %><br />
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'ml-2 w-75' %>
      </div>

      <div class='actions'>
        <%= f.submit 'Register', class: 'btn btn-primary ml-2' %>
      </div>
    <% end %> <!-- close form_for-->

  </div> <!-- close container -->



</div> <!-- close container -->
  <%= render 'devise/shared/links' %>