<div class='container-fluid d-flex align-items-center flex-column'>

    <h2 class='mb-4'>Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class='field'>
          <%= f.label :email, class: 'ml-2' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'ml-2' %>
        </div>

        <div class='field'>
          <%= f.label :password, class: 'ml-2' %><br />
          <%= f.password_field :password, autocomplete: 'current-password', class: 'ml-2' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class='field mt-3 ml-2'>
            <%= f.check_box :remember_me, class: 'check-box check-box-lg mr-2' %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class='actions'>
          <%= f.submit 'Log in', class: 'btn btn-primary mb-4 ml-2' %>
        </div>
      <% end %>
      </div>

    <%= render 'devise/shared/links' %>

</div> <!-- close container -->