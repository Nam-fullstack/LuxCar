<div class='container'>
  <div class='d-flex flex-column justify-content-center align-items-center'>
  <div>
  <!-- div class='row d-flex flex-column justify-content-center'-->
    <%# @@event.each do |event| %>
      <%= link_to "#{@listing.title}", listing_path(@event.listing) %>
      <div class='row mt-3'>
        <div class='col-2 mr-4'>
          <strong>Title: </strong>
        </div>
        <div class='col-8'><%= @event.name %>
        </div>
      </div>
      <div class='row mt-3'>
        <div class='col-2 mr-4'>
          <strong>Address: </strong>
        </div>
        <div class='col-8'>
          <%= "#{@event.address} #{State.find(@event.listing.state_id).name} #{@event.postcode}" %>
        </div>
      </div>
      <div class='row mt-3'>
        <div class='col-2 mr-4'>
          <strong>Date: </strong>
        </div>
        <div class='col-8'>
          <%= (@event.start_time).strftime("%B %d, %Y") %>
        </div>
      </div>
      <div class='row mt-3'>
        <div class='col-2 mr-4'>
          <strong>Time: </strong>
        </div>
        <div class='col-8'>
          <%= (@event.start_time).strftime("%I:%M %P") %>
        </div>
      </div>
      <div class='row mt-3'>
        <div class='col-2 mr-4'>
          <strong>Message: </strong>
        </div>
        <div class='col-8'>
          <%= @event.message %>
        </div>
      </div>
      <div class='row mt-3'>
        <div class='col-2 mr-4'>
          <strong>Confirmed: </strong>
        </div>
        <div class='col-8'>
          <%= @event.confirmed ? "✅ CONFIRMED" : "❌ UNCONFIRMED" %>
          <%#= button_to "Confirm", confirm_@event %>
        </div>
      </div>
      <div class='row ml-2'>  
        <%= link_to 'Edit', edit_event_path(@event.id), class: 'btn btn-warning my-4 mr-4' %>
        <%= link_to 'Delete', @event, class: 'btn btn-danger my-4', method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <%# end %>
    </div>
  </div> <!-- close d-flex -->
</div> <!-- close container -->