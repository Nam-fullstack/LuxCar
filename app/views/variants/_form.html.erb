<%= form_with(model: variant) do |form| %>
  <% if variant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(variant.errors.count, "error") %> prohibited this from being saved:</h2>

      <ul>
        <% variant.errors.full_messages.each do |message| %>
          <li><%= message.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-row">
    <div class="form-group mb-3 ml-2">
      <%= form.label :year, class:"col form-label" %>
      <%= form.collection_select(:year_id, Year.all.order(id: :desc), :id, :year) %>
    </div>

    <div class="form-group mb-3 ml-2">
      <%= form.label :make, class:"col form-label" %>
      <%= form.collection_select(:make_id, Make.all, :id, :name) %>
    </div>

    <div class="form-group mb-3 ml-2">
      <%= form.label :model, class:"col form-label" %>
      <%= form.collection_select(:model_id, Model.all, :id, :name) %>
    </div>

    <div class="form-group mb-3 ml-2">
      <%= form.label :engine, class:"col form-label" %>
      <%= form.collection_select(:engine_id, Engine.all, :id, :name, {:selected => 12}) %>
    </div>
  </div> <!-- close form-row -->

  <div class="form-group mb-3 ml-2">
    <%= form.label :transmission, class:"col form-label" %>
    <%= form.collection_select(:transmission_id, Transmission.all, :id, :name) %>
  </div>

  <div class="form-group mb-3 ml-2">
    <%= form.label :speed, class:"col form-label" %>
    <%= form.collection_select(:speed_id, Speed.all, :id, :name, {:selected => 3}) %>
  </div>

  <div class="form-group mb-3 ml-2">
    <%= form.label :body_type, class:"col form-label" %>
    <%= form.collection_select(:body_type_id, BodyType.all, :id, :name, {:selected => 2}) %>
  </div>

  <div class="form-group mb-3 ml-2">
    <%= form.label :door %>
    <%= form.collection_select(:door_id, Door.all, :id, :name) %>
  </div>

  <div class="form-group mb-3 ml-2">
    <%= form.label :drive_type %>
    <%= form.collection_select(:drive_type_id, DriveType.all, :id, :name, {:selected => 2}) %>
  </div>
  
  <div class="form-group mb-3 ml-2">
    <%= form.label :fuel %>
    <%= form.collection_select(:fuel_id, Fuel.all, :id, :name, {:selected => 6}) %>
  </div>

  <div class="form-group mb-3 ml-2">
    <%= form.label "Engine displacement" %>
    <%= form.number_field :displacement, placeholder: '5.5L (number only)', step: '0.1' %>
  </div>

  <div class="form-group mb-3 ml-2">
    <%= form.label :power %>
    <%= form.number_field :power, placeholder: 'horsepower' %>
  </div>

  <div class="form-group mb-3 ml-2">
    <%= form.label :colour %>
    <%= form.collection_select(:colour_id, Colour.all, :id, :name, {:selected => 18}) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
