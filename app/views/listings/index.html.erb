<p id='notice' class='alert-dismissible fade show'><%= notice %></p>

<div class='container-fluid'>
  <%= render 'shared/listings-sidebar' %>

  <div class='filters d-flex flex-direction-row'>
    <div class='search_filter'>
      <%= render 'shared/listings-search' %>
    </div>
    
    <div class='listings-sort '>
      <select name='sort' id='sort' class='form-control w-100'>
        <option value='cheapest'>Price (Low to High)</option>
        <option value='expensive'>Price (High to Low)</option>
        <option value='newest'>Year Made (High to Low)</option>
        <option value='oldest'>Year Made (Low to High)</option>
        <option value='power'>Power (High to Low)</option>
        <option value='mileage'>Kms (Low to High)</option>
        <option value='recent'>Recently Listed</option>
      </select>
    </div>
  </div>

  <div class='listings-cards-container'>
    <% @listings.each do |listing| %>
      <!-- Don't need conditional for if listing.sold == false since controller already
           handles this. -->
      <%= render 'shared/listing-card', listing: listing %>
    <% end %>
  </div> <!-- close listings-cards-container -->
</div> <!-- close container -->
