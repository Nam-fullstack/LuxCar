<%= form_with(model: listing) do |form| %>
  <% if listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
        <% listing.errors.full_messages.each do |message| %>
          <li><%= message.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h3 class="listing-question">Where will you be selling your car?</h3>
  <div class="form-group mb-3 ml-2">
    <%= form.label :state_id, class:"col form-label" %>
    <%= form.collection_select(:state_id, State.all, :id, :name, class: "form-control") %>
  </div>

  <div class="form-group mb-3 ml-2">
    <%= form.label :postcode, class:"col form-label" %>
    <%= form.number_field :postcode %>
  </div>

  <div class="form-group mb-3 ml-2">
    <%= form.label :price, class:"col form-label" %>
    <%= form.number_field :price, placeholder: '$AUD' %>
  </div>

  <div class="form-group mb-3 ml-2">
    <%= form.label :mileage, class:"col form-label" %>
    <%= form.number_field :mileage, placeholder: 'in kms' %>
  </div>

  <div class="form-group mb-3 ml-2">
    <%= form.label :description, class:"col form-label" %>
    <%= form.text_area :description, size: "80x20" %>
  </div>

  <h5 class="mb-2 ml-2"> Features </h5>
  <div class="form-check mb-3"> 
    <%= form.collection_check_boxes :feature_ids, @features.sort, :id, :name do |b| %>
      <%= b.label class: "form-check-label" %>
      <%= b.check_box class: 'form-check-line mr-2' %>
    <% end %>
  </div>

  <div class="form-group mb-3 ml-2">
    <%= form.label :pictures, "Upload Images" %>
    <%= form.file_field :pictures, 
      class:"form-control-file", 
      onchange: "validateFiles(this);",
      data: { max_file_size: 5.megabytes },
      multiple: true,
      accept: "image/jpg,image/png,image/jpeg" 
    %>
  </div> 
  <!-- Code from https://stevenyue.com/blogs/validate-attachment-file-size-and-type-in-rails/ -->

  <div class="actions form-submit">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>

<%= javascript_pack_tag "validateFiles" %>