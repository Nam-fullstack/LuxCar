<%= form_with(model: listing) do |form| %>
  <% if listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
        <% listing.errors.full_messages.each do |message| %>
          <li><%= message.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h3 class="listing-question">Where will you be selling your car?</h3>
  <div class="form-group mb-3 ml-2">
    <%= form.label :state_id, class:"col form-label" %>
    <%= form.collection_select(:state_id, State.all, :id, :name) %>
  </div>

  <div class="form-group mb-3 ml-2">
    <%= form.label :postcode, class:"col form-label" %>
    <%= form.text_field :postcode %>
  </div>

    <div class="form-group mb-3 ml-2">
    <%= form.label :year, class:"col form-label" %>
    <%= form.collection_select(:year_id, Year.all, :id, :year) %>
  </div>

    <div class="form-group mb-3 ml-2">
    <%= form.label :make, class:"col form-label" %>
    <%= form.collection_select(:make_id, Make.all, :id, :name) %>
  </div>

    <div class="form-group mb-3 ml-2">
    <%= form.label :model, class:"col form-label" %>
    <%= form.collection_select(:model_id, Model.all, :id, :name) %>
  </div>

    <div class="form-group mb-3 ml-2">
    <%= form.label :variant, class:"col form-label" %>
    <%= form.collection_select(:variant_id, Variant.all, :id, :name) %>
  </div>

    <div class="form-group mb-3 ml-2">
    <%= form.label :engine, class:"col form-label" %>
    <%= form.collection_select(:engine_id, Engine.all, :id, :name) %>
  </div>

    <div class="form-group mb-3 ml-2">
    <%= form.label :transmission, class:"col form-label" %>
    <%= form.collection_select(:transmission_id, Transmission.all, :id, :name) %>
  </div>

    <div class="form-group mb-3 ml-2">
    <%= form.label :speed, class:"col form-label" %>
    <%= form.collection_select(:speed_id, Speed.all, :id, :name) %>
  </div>

    <div class="form-group mb-3 ml-2">
    <%= form.label :body_type, class:"col form-label" %>
    <%= form.collection_select(:body_type_id, BodyType.all, :id, :name) %>
  </div>

    <div class="form-group mb-3 ml-2">
    <%= form.label :door %>
    <%= form.collection_select(:door_id, Door.all, :id, :name) %>
  </div>


    <div class="form-group mb-3 ml-2">
    <%= form.label :drive_type %>
    <%= form.collection_select(:drive_type_id, DriveType.all, :id, :name) %>
  </div>
  
    <div class="form-group mb-3 ml-2">
    <%= form.label :fuel %>
    <%= form.collection_select(:fuel_id, Fuel.all, :id, :name) %>
  </div>

  <div class="form-group mb-3 ml-2">
    <%= form.label :colour %>
    <%= form.collection_select(:colour_id, Colour.all, :id, :name) %>
  </div>

  <div class="form-group mb-3 ml-2">
    <%= form.label :price, class:"col form-label" %>
    <%= form.number_field :price, placeholder: '$AUD' %>
  </div>

  <div class="form-group mb-3 ml-2">
    <%= form.label :mileage, class:"col form-label" %>
    <%= form.number_field :mileage, placeholder: 'in kms' %>
  </div>

  <div class="form-group mb-3 ml-2">
    <%= form.label :description, class:"col form-label" %>
    <%= form.text_area :description %>
  </div>

  <h3 class="mb-2 ml-2"> Features </h3>
  <div class="form-check mb-3"> 
    <%=form.collection_check_boxes :feature_ids, @features, :id, :name do |box| %>
      <%=box.label class: 'form-check-label'%>
      <%=box.check_box class: 'form-check-line mr-2'%>
    <%end%>
  </div>

  <div class="form-group mb-3 ml-2">
    <%= form.label :picture, class:"col form-label" %>
    <%= form.file_field :picture, class:"form-control-file", accept: "image/jpg,image/png" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
